        <item name="android:textSize">@dimen/text_size_extra_normal</item>
        <item name="android:fontFamily">@font/titillium_regular</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:paddingLeft">@dimen/activity_margin_normal_</item>
        <item name="android:paddingRight">@dimen/activity_margin_normal_</item>
        <item name="android:paddingTop">@dimen/activity_margin_normal_</item>
